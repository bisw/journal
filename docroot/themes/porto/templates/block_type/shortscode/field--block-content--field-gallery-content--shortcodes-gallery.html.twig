{% for key, item in items %}
{% set thumbnail = file_url(item.content['#field_collection_item'].field_gallery_image.entity.fileuri) %}
<li class="isotope-item">
    <div class="image-gallery-item">
        <a href="{{ item.content['#field_collection_item'].field_gallery_link.value }}">
            <span class="thumb-info thumb-info-centered-info thumb-info-no-borders">
                <span class="thumb-info-wrapper">
                    <img src="{{ thumbnail }}" class="img-responsive" alt="">
                    <span class="thumb-info-title">
                        <span class="thumb-info-inner">{{ item.content['#field_collection_item'].field_gallery_title.value }}</span>
                    </span>
                    <span class="thumb-info-action">
                        <span class="thumb-info-action-icon"><i class="fa fa-link"></i></span>
                    </span>
                </span>
            </span>
        </a>
    </div>
</li>
{% endfor %}