{% set thumbnail = row._entity.field_thumbnail %}
{% set categoryIds = fields.field_portfolio_category.content|split(',') %}

<li class="col-md-2 isotope-item {% for categoryId in categoryIds %}{{ 'category' }}{{ categoryId|trim }} {% endfor %}">
    <div class="portfolio-item">
        <a href="{{ fields.path.content }}">
            <span class="thumb-info thumb-info-centered-info thumb-info-no-borders">
                <span class="thumb-info-wrapper">
                    
                    {% if thumbnail.entity.fileuri %}
                        <img src="{{ file_url(thumbnail.entity.fileuri) }}" class="img-responsive" alt="">
                    {% else %}
                        <img src="http://placehold.it/1170x1170" class="img-responsive" alt="">
                    {% endif %}
                    
                    <span class="thumb-info-title">
                        <span class="thumb-info-inner font-size-xs">{{ fields.title.content }}</span>
                    </span>
                </span>
            </span>
        </a>
    </div>
</li>