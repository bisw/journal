{% set thumbnail = row._entity.field_thumbnail %}
{% set categoryIds = fields.field_portfolio_category.content|split(',') %}

<li class="col-md-3 col-sm-6 col-xs-12 isotope-item {% for categoryId in categoryIds %}{{ 'category' }}{{ categoryId|trim }} {% endfor %}">
    <div class="portfolio-item">
        <span class="thumb-info thumb-info-lighten thumb-info-bottom-info thumb-info-centered-icons">
            <span class="thumb-info-wrapper">

                {% if thumbnail.entity.fileuri %}
                    <img src="{{ file_url(thumbnail.entity.fileuri) }}" class="img-responsive" alt="">
                {% else %}
                    <img src="http://placehold.it/1170x1170" class="img-responsive" alt="">
                {% endif %}

                <span class="thumb-info-title">
                    <span class="thumb-info-inner">{{ fields.title.content }}</span>
                    <span class="thumb-info-type">{{ fields.field_portfolio_category_1.content }}</span>
                </span>
                <span class="thumb-info-action">
                    <a href="{{ fields.path.content }}">
                        <span class="thumb-info-action-icon thumb-info-action-icon-primary"><i class="fa fa-link"></i></span>
                    </a>

                    {% if thumbnail.entity.fileuri %}
                        <a href="{{ file_url(thumbnail.entity.fileuri) }}" class="lightbox-portfolio">
                            <span class="thumb-info-action-icon thumb-info-action-icon-light"><i class="fa fa-search-plus"></i></span>
                        </a>
                    {% else %}
                        <a href="http://placehold.it/1170x1170" class="lightbox-portfolio">
                            <span class="thumb-info-action-icon thumb-info-action-icon-light"><i class="fa fa-search-plus"></i></span>
                        </a>
                    {% endif %}

                </span>
            </span>
        </span>
    </div>
</li>